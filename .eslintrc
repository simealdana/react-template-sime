{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "jest": true
    },
    "globals": {
        "localStorage": true,
        "fetch": true
    },
    "plugins": ["react"],
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "extends": [
        "eslint:recommended",
        "standard",
        "plugin:react/recommended",
        "prettier",
        "prettier/react",
        "prettier/standard"
    ],
    "rules": {
        "space-before-function-paren": 0,
        "react/jsx-boolean-value": 0,
        "indent": "off",
        "arrow-body-style": ["error", "as-needed"]
    }
}